= stylesheet_link_tag "form"
= stylesheet_link_tag "buttons"

- provide(:title, "Create a profile")

.container
  %h2.form-header Create your profile
  .profile-form
    = form_for(@profile) do |f|
      - if @profile.errors.any?
        .alert.alert-danger
          %ul
            - @profile.errors.full_messages.each do |message|
              %li= message
      .form-field
        = f.text_field :first_name, placeholder: 'First name *'
        = f.text_field :last_name, placeholder: 'Last name *'
        = f.text_field :phone, placeholder: 'Phone *'
        - if current_user.role == "customer"
          = f.text_field :street_address, placeholder: 'Street Address *'
          = f.text_field :city, placeholder: 'City *'
          = f.text_field :county, placeholder: 'County *'
        = f.submit "Complete Profile", class: "btn button"

