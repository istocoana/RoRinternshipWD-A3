= stylesheet_link_tag "form"
= javascript_include_tag "form"
= stylesheet_link_tag "buttons"

- provide(:title, "Log in")

.container
  %h2.form-header Log in
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    %div{ :class => ("alert alert-danger" if alert.present?) }
      .errors
        = alert
    .form-field
      = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email"
      = f.password_field :password, autocomplete: "current-password", placeholder: "Password"
      = f.submit "Log in", class: "btn button"
      - if devise_mapping.rememberable?
        .form-checks
          = f.check_box :remember_me
          = f.label :remember_me
      .links
        %p 
          Don`t have an account? 
          = link_to "Create Now", new_registration_path(resource_name), class: "link"
        %p
          -# = link_to "Forgot your password?", new_password_path(resource_name), class: "link"
