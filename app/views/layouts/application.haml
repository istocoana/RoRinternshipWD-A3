<!DOCTYPE html>
%html(lang="en")
  %head
    %meta(charset="UTF-8")/
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")/
    %title= full_title(yield(:title))
    %link{ href: "https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css", rel: "stylesheet", integrity: "sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9", crossorigin: "anonymous" }
    %link{ href: "https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css", rel: "stylesheet" }
    %link{ rel: "preconnect", href: "https://fonts.googleapis.com" }
    %link{ rel: "preconnect", href: "https://fonts.gstatic.com", crossorigin: true }
    %link{ href: "https://fonts.googleapis.com/css2?family=Poppins:wght@300&display=swap", rel: "stylesheet" }
    = stylesheet_link_tag "toastr.min.css"
    = stylesheet_link_tag "application", "data-turbo-track" => "reload"
    = stylesheet_link_tag "nouislider.min", media: "all"
    = javascript_include_tag "nouislider.min"
    = javascript_include_tag "toastr.min"
    = javascript_include_tag "application"

  %body{  style: "font-family: 'Poppins';" } 
    .header
      = render "layouts/header"
    .main
      .notices{ style: 'display: none' }
        %p.notice(data-notice="#{j(notice)}")
        %p.alert(data-alert="#{j(alert)}")

      = yield
      
    .footer
      = render "layouts/footer"


